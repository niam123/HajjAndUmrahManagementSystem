@model IEnumerable<HajAndUmrah.Models.Package_tbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPackageList.cshtml";
}

<h2>Package List</h2>
<form method="post">
    <input type="text" name="Search" />
    <input type="submit" value="Search" />

</form>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PackageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PackagePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelName_tbl.HotelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PackageGroup_tbl.PackageGroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StarRate_tbl.StarRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PackageType_tbl.PackageTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomType_tbl.RoomType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TravelClass_tbl.TravelClassName)
        </th>
        <th>#</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Content("./Upload/Picture/" + item.PackageId.ToString()+"_"+item.Image)" alt="Image" width="150" height="150" />

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PackageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfDays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PackagePrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelName_tbl.HotelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PackageGroup_tbl.PackageGroupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StarRate_tbl.StarRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PackageType_tbl.PackageTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomType_tbl.RoomType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TravelClass_tbl.TravelClassName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PackageId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PackageId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PackageId })
        </td>
    </tr>
}

</table>
