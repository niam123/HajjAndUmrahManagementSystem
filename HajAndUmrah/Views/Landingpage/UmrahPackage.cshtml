    <script src="~/Content/CustomStyle/js/jquery-ui.js"></script>
    <script src="~/Content/CustomStyle/js/easing.min.js"></script>
    <script src="~/Content/CustomStyle/js/hoverIntent.js"></script>
    <script src="~/Content/CustomStyle/js/superfish.min.js"></script>
    <script src="~/Content/CustomStyle/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/Content/CustomStyle/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/CustomStyle/js/jquery.nice-select.min.js"></script>
