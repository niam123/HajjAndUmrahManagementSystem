@model IEnumerable<HajAndUmrah.Models.Package_tbl>


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx" class="no-js">
<head>

    <title>Umrah Package</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
    <!--
    CSS
    ============================================= -->
    <link rel="stylesheet" href="~/Content/CustomStyle/css/linearicons.css">
    <link rel="stylesheet" href="~/Content/CustomStyle/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/CustomStyle/css/bootstrap.css">
    <link rel="stylesheet" href="~/Content/CustomStyle/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Content/CustomStyle/css/jquery-ui.css">
    <link rel="stylesheet" href="~/Content/CustomStyle/css/nice-select.css">
    <link rel="stylesheet" href="~/Content/CustomStyle/css/animate.min.css">
    <link rel="stylesheet" href="~/Content/CustomStyle/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Content/CustomStyle/css/main.css">
</head>
<body>
    <header id="header">
        <div class="container main-menu">
            <div class="row align-items-center justify-content-between d-flex">
                <div id="logo">
                    <a href="@Url.Action("Index","Landingpage")"><img src="~/Content/CustomStyle/img/logo.png" alt="" title="" height="75" width="75" /></a>
                </div>
                <nav id="nav-menu-container">
                    <ul class="nav-menu">
                        <li><a href="@Url.Action("Index","Landingpage")">Home</a></li>
                        <li><a href="@Url.Action("About","Landingpage")">About</a></li>
                        <li>
                            <a href="#"> Packages</a>
                            <ul>
                                <li><a href="@Url.Action("HajjPackage","Landingpage")">Hajj Package</a></li>
                                <li><a href="@Url.Action("UmrahPackage","Landingpage")">Umrah Package</a></li>
                            </ul>

                        </li>
                        <li><a href="@Url.Action("Hotels","Landingpage")">Hotels</a></li>
                        <li><a href="@Url.Action("Contact","Landingpage")">Contact</a></li>
                        <li><a href="@Url.Action("Login","Login")">Login</a></li>
                    </ul>
                </nav><!-- #nav-menu-container -->
            </div>
        </div>
    </header><!-- #header -->
    <!-- start banner Area -->
    <section class="about-banner relative">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="about-content col-lg-12">
                    <h1 class="text-white">
                        Umrah Packages
                    </h1>
                    <p class="text-white link-nav"><a href="@Url.Action("Index","Landingpage")">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="@Url.Action("UmrahPackage","Landingpage")">Umrah Packages</a></p>
                </div>
            </div>
        </div>
    </section>
    <!-- End banner Area -->
    <!-- Start destinations Area -->
    <section class="destinations-area section-gap">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="menu-content pb-40 col-lg-8">
                    <div class="title text-center">
                        <h1 class="mb-10">Popular Umrah Packages</h1>
                        <p>Online registration begins August 19, full payment by September 30</p>
                    </div>
                </div>
            </div>

            <div class="row">
                @foreach (var package in Model.Where(x => x.PackageType == 2).ToList())
                {
                    <div class="col-lg-4">
                        <div class="single-destinations">
                            <div class="thumb">
                                @*<img src="~/Content/CustomStyle/img/packages/d1.jpg" alt="">*@
                                @if (package.Image == null)
                                {
                                    <img src="@Url.Content("~/Upload/Picture/fgh.jpg")" alt="Image" width="450" height="250" />

                                }
                                else
                                {
                                    <img src="@Url.Content("~/Upload/Picture/" + package.PackageId.ToString() + "_" + package.Image)" alt="Image" width="450" height="250" />

                                }
                            </div>
                            <div class="details">
                                <h4>Package- @package.PackageGroup_tbl.PackageGroupName</h4>
                                <p>
                                    Only valid for Bangladesh
                                </p>
                                <ul class="package-list">
                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Date</span>

                                        <h5>@package.Date.ToString("dd-MM-yyyy")</h5>


                                    </li>
                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Package Type</span>

                                        <h5>@package.PackageType_tbl.PackageTypeName</h5>


                                    </li>
                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Package Name</span>


                                        <h5>@package.PackageName</h5>




                                    </li>

                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Travel Class</span>


                                        <h5>@package.TravelClass_tbl.TravelClassName</h5>


                                    </li>
                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Hotel Name</span>

                                        <h5>@package.HotelName_tbl.HotelName</h5>

                                    </li>
                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Room Type</span>

                                        <h5>@package.RoomType_tbl.RoomType</h5>


                                    </li>
                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Star Rate</span>

                                        <h5>@package.StarRate_tbl.StarRate</h5>



                                    </li>
                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Number of Days</span>

                                        <h5>@package.NoOfDays</h5>


                                    </li>

                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Price per person</span>

                                        <a href="#" class="price-btn">@package.PackagePrice Taka</a>


                                    </li>
                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Order Now</span>

                                        <a href="@Url.Action("Create","Customer",new { id=package.PackageId})" class="price-btn">Booking Order</a>


                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @*<div class="row">
                    @foreach (var package in Model.Where(x => x.PackageType == 1).ToList())
                    {
                        <div class="col-lg-4">
                            <div class="single-destinations">
                                <div class="thumb">
                                    <img src="~/Content/CustomStyle/img/packages/d1.jpg" alt="">
                                </div>
                                <div class="details">
                                    <h4>Package- @package.PackageGroup_tbl.PackageGroupName</h4>
                                    <p>
                                       Create Your Own Package
                                    </p>
                                    <ul class="package-list">
                                        <li class="d-flex justify-content-between align-items-center">
                                            <span>Date</span>

                                            <h5>@package.Date.ToString("dd-MM-yyyy")</h5>


                                        </li>

                                        <li class="d-flex justify-content-between align-items-center">
                                            <span>Customize</span>

                                            <a href="@Url.Action("Create","Customer",new { id=package.PackageId})" class="price-btn">Customize</a>


                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>*@
        </div>
    </section>
    <!-- End destinations Area -->
    <!-- start footer Area -->
    <footer class="footer-area section-gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-3  col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6>About Agency</h6>
                        <p>
                            The world has become so fast paced that people do not want to stand by reading a page of information, they would much rather look at a presentation and understand the message. It has come to a point
                        </p>
                    </div>
                </div>

                <div class="col-lg-3  col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6>Newsletter</h6>
                        <p>
                            For business professionals caught between high OEM price and mediocre print and graphic output.
                        </p>
                    </div>
                </div>
                <div class="col-lg-3  col-md-6 col-sm-6">
                    <div class="single-footer-widget mail-chimp">
                        <h6 class="mb-20">InstaFeed</h6>
                        <ul class="instafeed d-flex flex-wrap">
                            <li><img src="~/Content/CustomStyle/img/i1.jpg" alt=""></li>
                            <li><img src="~/Content/CustomStyle/img/i2.jpg" alt=""></li>
                            <li><img src="~/Content/CustomStyle/img/i3.jpg" alt=""></li>
                            <li><img src="~/Content/CustomStyle/img/i4.jpg" alt=""></li>
                            <li><img src="~/Content/CustomStyle/img/i5.jpg" alt=""></li>
                            <li><img src="~/Content/CustomStyle/img/i6.jpg" alt=""></li>
                            <li><img src="~/Content/CustomStyle/img/i7.jpg" alt=""></li>
                            <li><img src="~/Content/CustomStyle/img/i8.jpg" alt=""></li>
                        </ul>
                    </div>
                </div>

                <div class="row footer-bottom d-flex justify-content-between align-items-center">
                    <p class="col-lg-8 col-sm-12 footer-text m-0">
                        &copy Copyright
                        <script>document.write(new Date().getFullYear());</script> All rights reserved by Caveman International Limited
                    </p>
                    <div class="col-lg-4 col-sm-12 footer-social">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-dribbble"></i></a>

                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- End footer Area -->
